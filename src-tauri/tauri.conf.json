{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run start",
    "devPath": "http://localhost:3000",
    "distDir": "../build"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": true
      },
      "shell": {
        "open": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://**", "wss://**"]
      }
    },
    "bundle": {
      "active": true,
      "category": "Finance",
      "copyright": "AZFX",
      "identifier": "com.azfx.trading",
      "shortDescription": "AZFX Gold Trading",
      "longDescription": "Professional XAUUSD Gold Trading Intelligence",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https: wss:; script-src 'self'; style-src 'self' 'unsafe-inline';"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 900,
        "resizable": true,
        "title": "AZFX - Gold Trading Intelligence",
        "width": 1400,
        "minWidth": 1200,
        "minHeight": 800,
        "center": true
      }
    ]
  }
}
