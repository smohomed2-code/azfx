{
  "$schema": "https://schema.tauri.app/config/2",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "AZFX - Gold Trading Intelligence",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "identifier": "com.azfx.trading",
    "targets": ["msi"],
    "windows": {
      "digestAlgorithm": "sha256"
    }
  }
}
