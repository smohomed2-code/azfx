{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run start",
    "devPath": "http://localhost:3000",
    "distDir": "../build"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": { "all": true },
      "shell": { "open": true }
    },
    "bundle": {
      "active": true,
      "category": "Finance",
      "copyright": "AZFX",
      "identifier": "com.azfx.trading",
      "shortDescription": "AZFX Gold Trading",
      "longDescription": "AZFX Gold Trading Intelligence",
      "targets": ["msi", "exe"],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self'"
    },
    "updater": { "active": false },
    "windows": [{
      "fullscreen": false,
      "height": 900,
      "resizable": true,
      "title": "AZFX - Gold Trading Intelligence",
      "width": 1400,
      "minWidth": 1200,
      "minHeight": 800,
      "center": true
    }]
  }
}
